<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
        android:id="@+id/contenedor_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/elige_dia"
                android:background="@color/colorNegro"
                android:textColor="@color/colorBlanco"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/textoPeq"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elige dÃ­a" />

            <RadioGroup
                android:id="@+id/quedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/laboral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorNegro"
                    android:textColor="@color/colorNegro"

                    android:text="@string/laborable"
                    />

                <RadioButton
                    android:id="@+id/viernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorNegro"
                    android:textColor="@color/colorNegro"

                    android:text="@string/viernes"
                    />

                <RadioButton
                    android:id="@+id/sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorNegro"
                    android:textColor="@color/colorNegro"
                    android:text="@string/sabado"
                    />

                <RadioButton
                    android:id="@+id/festivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorNegro"
                    android:textColor="@color/colorNegro"

                    android:text="@string/festivo"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNegro"
                android:padding="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelar_dia"
                    style="@style/boton_pequeno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="@string/hoy"/>

                <Button
                    android:id="@+id/aceptar_dia"
                    style="@style/boton_pequeno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="@string/cambiar"/>

            </LinearLayout>


        </LinearLayout>

        </androidx.cardview.widget.CardView>




</LinearLayout>